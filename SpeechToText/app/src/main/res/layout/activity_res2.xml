<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="155dp"
            android:layout_height="130dp"
            android:src="@mipmap/baby1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:textColor="#FFFFDD"
                android:text="NH 아이행복카드" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:text="테마파크 자유이용권 50%" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:text="교육기관 10% 청구할인" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="155dp"
            android:layout_height="130dp"
            android:src="@mipmap/baby2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:textColor="#FFFFDD"
                android:text="IBK 재능일등엄마카드" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:text="재능교육 1만원 할인" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:text="교육기관 5% 할인" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="155dp"
            android:layout_height="130dp"
            android:src="@mipmap/baby3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:textColor="#FFFFDD"
                android:text="삼성카드 4" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:text="육아 업종 0.7-1% 할인" />

            <EditText
                android:id="@+id/editText12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:text="모든 문구 0.7-1% 할인" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="155dp"
            android:layout_height="130dp"
            android:src="@mipmap/baby4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:textColor="#FFFFDD"
                android:text="IBK 문화융성카드" />

            <EditText
                android:id="@+id/editText15"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:text="학원 업종 7% 청구 할인" />

            <EditText
                android:id="@+id/editText16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="textPersonName"
                android:text="전국 서점 15% 할인" />
        </LinearLayout>
    </TableRow>
</TableLayout>
